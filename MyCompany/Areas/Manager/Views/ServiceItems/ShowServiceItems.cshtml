
@{
    ViewData["Title"] = "ShowServiceItems";
}


@model IQueryable<ServiceItem>

<div>
    @if (Model.Any())
    {
        <ul class="big-image-list">
            @foreach (ServiceItem entity in Model)
            {
                <li>
                    <a asp-area="Manager" asp-controller="ServiceItems" asp-action="Edit" asp-route-id="@entity.Id">
                        <img src="~/images/@entity.TitleImagePath" alt="" class="left" />
                    </a>

                    <p>@entity.Price $</p>

                    <h4>@entity.Title</h4>
                </li>
            }
        </ul>
    }
</div>
